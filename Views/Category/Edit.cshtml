@model Category
<form method="post">
    <input asp-for="contentnumber" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Update Category</h2>
            <hr />
            <div class="mb-3 row">
                <label asp-for="content">Category Content:</label>
                <input asp-for="content" class="form-control" type="text" />
                <span asp-validation-for="content" class="text-danger"></span>

            </div>
            <div class="mb-3 row">
                <label asp-for="CategoryId"></label>
                <input asp-for="CategoryId" class="form-control" />
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-6">
                    <button class="btn btn-primary col-6" type="submit" style="width:150px">
                        Update
                    </button>
                </div>

                <div class="col-6">
                    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary">
                        GO-BACK
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

