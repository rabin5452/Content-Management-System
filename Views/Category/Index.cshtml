@model List<Category>

<div class="container">
    <div class="row pt-4">
        <div class="col-7">
            <h2>
                Category List
            </h2>
        </div>
        <div class="col-7 p-3">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Create New Category
            </a>

        </div>
    </div>

<table class="table table-bordered table-striped ">
    <thead class="text-bg-dark">
    <tr>
        <th>
            Category Id 
        </th>
        <th>
            Category Conetent
        </th>
        <th>
            Actions
        </th>
    </tr>
    </thead>
    <tbody class="bg-white">
        @foreach(var obj in Model.OrderBy(u=>u.CategoryId)){
        <tr>
            <td>
                @obj.CategoryId
            </td>
            <td>
               @obj.content
            </td>
            <td>
               <div class="p-1 btn-group" role="group">
                   <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-edit bg-white mx-2">
                   <i class="bi bi-pencil-square"></i>Edit
                   </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Delete
                            </a>
               </div>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>
@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}